= render "main_header"

.item-box-container
  .h1.item-name
    = @item.item_name
  %p.item-wording
  #{@item.item_name}を出品したのは、
  %span
    = link_to "#{@user.nickname}", "#"
  です。
  %span
    = link_to "#{@item.category}", "#"
  の商品で、#{@prefecture.name}から#{@item.shipping_days}で発送されます。
  .item-main-content
    .item-photo
      .item-photo__carousel
        .item-photo__carousel__outer
          - if @item.images.attached?
            - @item.images.each do |image|
              = image_tag image, class:"item-photo__carousel__outer"
          -# = image_tag("#{rails_blob_path active_storage_blob.key}")
          .item-photo__carousel__outer__disabled
        .outer-dots
          .outer-dots__1
            - if @item.images.attached?
              - @item.images.each do |image|
                = image_tag image, class:"outer-dots__1"
          .outer-dots__2
            - if @item.images.attached?
              - @item.images.each do |image|
                = image_tag image, class:"outer-dots__2"
          .outer-dots__3
            - if @item.images.attached?
              - @item.images.each do |image|
                = image_tag image, class:"outer-dots__3"
          .outer-dots__4
            - if @item.images.attached?
              - @item.images.each do |image|
                = image_tag image, class:"outer-dots__4"
          .outer-dots__5
            - if @item.images.attached?
              - @item.images.each do |image|
                = image_tag image, class:"outer-dots__5"

    %table.item-detail-table
      %tbody
        %tr
          %th 出品者
          %td
            = link_to "#{@user.nickname}", "#"
            %span
              .item-user-ratings
                %i.far.fa-grin
                %span 1
              .item-user-ratings
                %i.far.fa-frown
                %span 0
              .item-user-ratings
                %i.far.fa-tired
                %span 0
        %tr
          %th カテゴリー
          %td.item-detail-main-category
            = link_to "#{@item.category}", "#"
            .item-detail-table-sub-category
              = link_to "DVD/ブルーレイ", "#"
            .item-detail-table-sub-sub-category
              = link_to "アニメ", "#"
        %tr
          %th ブランド
          %td
            = link_to "#{@item.brand}", "#"
        %tr
          %th 商品の状態
          %td #{@item.condition}
        %tr
          %th 配送料の負担
          %td #{@item.postage}
        %tr
          %th 配送の方法
          %td #{@item.shipping_method}
        %tr
          %th 配送元地域
          %td
            = link_to "#{@prefecture.name}", "#"
        %tr
          %th 発送日の目安
          %td #{@item.shipping_days}

  .item-price-box.text-center
    %span.item-price.bold ¥#{@item.price}
    %span.item-tax (税込)
    %span.item-shipping-fee 送料込み
  .item-buy-btn
    = link_to "購入画面に進む", "#"

  .item-description
  %p.item-description-inner #{@item.explain}

  .item-button-container
    .item-button-container__left
      %button.item-button.item-button-like
        %i.far.fa-heart
        %span いいね!
        %span.fade-in-down 5
      %a.item-button-report
        %i.fas.fa-flag
        %span 不適切な商品の報告
    .item-button-right
      %i.fas.fa-user-lock
      %span あんしん・あんぜんへの取り組み

= render "main_footer"

