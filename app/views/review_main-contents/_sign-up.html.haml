.registration-contents
  %h2.single-head.bolb
    新規会員登録
  .registration-form
    .registration-form__content
      = link_to basic_info_review_users_path, class: 'email-submit' do
        メールアドレスで登録する
        = icon 'far', 'envelope'
    .registration-form__content
      = link_to user_facebook_omniauth_authorize_path,method: :post, class: 'facebook-submit' do
        Facebookで登録する
        = icon 'fab', 'facebook-square'
    .registration-form__content
      = link_to user_google_oauth2_omniauth_authorize_path,method: :post, class: 'google-submit' do
        googleで登録する
        = icon 'fab', 'google'
