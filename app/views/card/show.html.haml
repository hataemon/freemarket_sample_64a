.wrapper
  = render 'show/main_header'
  .mypage-wrapper
    = render "users/mypage-side-bar"
    .mypage-main
      %h2.chapter-head.bolb
        クレジットカード情報入力
      .card-form
        .card-form__content
          .card-form__content__division
            .content-wrap
              %h3.sub-head.bolb
                クレジットカード一覧
              = image_tag 'jcb.svg', width: '26', height: '20', alt: 'jcb'
              %br
              = "**** **** **** " + @default_card_information.last4
              %br
              - exp_month = @default_card_information.exp_month.to_s
              - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
              = exp_month + " / " + exp_year
            .content-wrap
              = form_with model: @card, url: delete_card_index_path, method: :post, local: true do |f|
                = f.submit '削除する', class: "delete-submit"
        .border
        %p.text-right
          = link_to "#" do
            支払い方法について
  = render 'show/main_footer'