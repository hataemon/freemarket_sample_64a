.registration-contents
  %h2.single-head.bolb
    新規会員登録
  .registration-form
    .registration-form__content
      = link_to '#', class: 'email-submit' do
        メールアドレスで登録する
        = icon 'far', 'envelope', class: 'submit-icon'
    .registration-form__content
      = link_to user_omniauth_authorize_path(:facebook), method: :post, class: 'facebook-submit' do
        Facebookで登録する
        = icon 'fab', 'facebook-square', class: 'submit-icon'
    .registration-form__content
      = link_to user_omniauth_authorize_path(:google), class: 'google-submit' do
        googleで登録する
        = icon 'fab', 'google', class: 'submit-icon'
