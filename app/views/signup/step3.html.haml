.registration-wrapper
  = render "registration-header"
  .registration-contents
    %h2.single-head.bolb
      発送元・お届け先住所入力
    = form_with model: @user, local: true, url: signup_index_path, method: 'POST', class: 'registration-form' do |f|
      = f.fields_for :address do |a|
        .registration-form__content
          = a.label :address_name_kanji, class: 'bolb' do
            お名前
          %span.form-necessary
            必須
          = a.text_field :family_name, placeholder: "山田", class: "input-text-field"
          = a.text_field :first_name, placeholder: "彩", class: "input-text-field"
        .registration-form__content
          = a.label :address_name_kana, class: 'bolb' do
            お名前カナ
          %span.form-necessary
            必須
          = a.text_field :family_name_katakana, placeholder: "ヤマダ", class: "input-text-field"
          = a.text_field :first_name_katakana, placeholder: "アヤ", class: "input-text-field"
        .registration-form__content
          = a.label :zip_code, class: 'bolb' do
            郵便番号
          %span.form-necessary
            必須
          = a.text_field :zip_code, placeholder: "例) 123-4567", class: 'input-text-field'
        .registration-form__content
          = a.label :prefecture_id, class: 'bolb' do
            都道府県
          %span.form-necessary
            必須
          .select-wrap
            = icon 'fas', 'chevron-down', class: 'select-wrap__icon'
            = a.collection_select :prefecture_id, Prefecture.all, :id, :name, { prompt: "--" }, class: 'select'
        .registration-form__content
          = a.label :city, class: 'bolb' do
            市区町村
          %span.form-necessary
            必須
          = a.text_field :city, placeholder: "例) 横浜市緑区", class: 'input-text-field'
        .registration-form__content
          = a.label :block, class: 'bolb' do
            番地
          %span.form-necessary
            必須
          = a.text_field :block, placeholder: "例) 青山1-1-1", class: 'input-text-field'
        .registration-form__content
          = a.label :building, class: 'bolb' do
            建物名
          %span.form-arbitrary
            任意
          = a.text_field :building, placeholder: "例) 柳ビル103", class: 'input-text-field'
        .registration-form__content
          = a.label :telephone_number, class: 'bolb' do
            電話
          %span.form-arbitrary
            任意
          = a.text_field :telephone_number, placeholder: "例) 09012345678", class: 'input-text-field'
          = f.submit value: "次へ進む", class: 'submit-btn'
  = render "registration-footer"
