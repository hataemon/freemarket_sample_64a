.registration-wrapper
  = render "registration-header"
  .registration-contents
    %h2.single-head.bolb
      発送元・お届け先住所入力
    %form.registration-form
      .registration-form__content
        %label.bolb
          お名前
        %span.form-necessary
          必須
        %input{name: "family_name_kanji", type: "text_field", placeholder: "山田", class: "input-text-field"}
        %input{name: "first_name_kanji", type: "text_field", placeholder: "彩", class: "input-text-field"}
      .registration-form__content
        %label.bolb
          お名前カナ
        %span.form-necessary
          必須
        %input{name: "family_name_kana", type: "text_field", placeholder: "ヤマダ", class: "input-text-field"}
        %input{name: "first_name_kana", type: "text_field", placeholder: "アヤ", class: "input-text-field"}
      .registration-form__content
        %label.bolb
          郵便番号
        %span.form-necessary
          必須
        %input{name: "zip-code", type: "text_field", placeholder: "例) 123-4567", class: "input-text-field"}
      .registration-form__content
        %label.bolb
          都道府県
        %span.form-necessary
          任意
        .select-wrap
          = icon 'fas', 'chevron-down'
          %select{name: "prefecture", class: "select"}
            %option --
            %option 北海道
            // active_hashの利用はコンフリクトの発生を考慮して出品ページの完了後に実装
      .registration-form__content
        %label.bolb
          市区町村
        %span.form-necessary
          必須
        %input{name: "city", type: "text_field", placeholder: "例) 横浜市緑区", class: "input-text-field"}
      .registration-form__content
        %label.bolb
          番地
        %span.form-necessary
          必須
        %input{name: "address1", type: "text_field", placeholder: "例) 青山1-1-1", class: "input-text-field"}
      .registration-form__content
        %label.bolb
          建物名
        %span.form-arbitrary
          任意
        %input{name: "address2", type: "text_field", placeholder: "例) 柳ビル103", class: "input-text-field"}
      .registration-form__content
        %label.bolb
          電話
        %span.form-arbitrary
          任意
        %input{name: "tell", type: "text_field", placeholder: "例) 09012345678", class: "input-text-field"}
        %input{type: "submit", value: "次へ進む", class: "submit-btn"}
  = render "registration-footer"
